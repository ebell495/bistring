        "build": "rollup -c",
        "watch": "rollup -cw",
        "test": "jest"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.14.7",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^21.0.2",
        "@rollup/plugin-typescript": "^8.2.1",
        "@types/jest": "^27.0.3",
        "core-js": "^3.15.2",
        "jest": "^27.0.6",
        "jest-junit": "^13.0.0",
        "rollup": "^2.53.1",
        "ts-jest": "^27.0.3",
        "tslib": "^2.3.0",
        "typescript": "^4.3.5"
    },
    "jest": {
        "reporters": [
            "default",
            "jest-junit"
        ],
        "testRegex": ".*\\.(spec|test)\\.[jt]s$",
        "transform": {
            ".*\\.ts?$": "ts-jest"
        }
    },
    "jest-junit": {
        "outputDirectory": "./test-results"
