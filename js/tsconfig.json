{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "outDir": "dist",
        "declarationDir": ".",
        "strict": true,
        "sourceMap": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist"
    ],
    "typedocOptions": {
        "excludePrivate": true
    }
}
